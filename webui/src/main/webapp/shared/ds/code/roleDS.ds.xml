<DataSource ID="roleDS" serverType="generic" inheritsFrom="abstractPersistentEntityDS">
	<serverObject lookupStyle="spring" bean="roleDMI" />
	<fields>
		<field name="id" 		type="integer" 	title="ID" 				primaryKey="true"/>
		<field name="roleCode" 	type="text" 	title="Role Code."  			length="30" 	required="true"/>
		<field name="engDesc" 	type="text" 	title="English Description"  	length="100"	required="true"/>
		<field name="chiDesc" 	type="text" 	title="Chinese Description"  	length="100"/>
		<field name="funcIds" 	type="any"/>
	</fields>
</DataSource>